<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qlhl.mapper.RoleMapper">


    <sql id="row">
       id,
     role,
   description,
    parentId,
    locked
  </sql>

    <select id="getRoleById" parameterType="int" resultType="com.qlhl.bean.Role">
        select
        <include refid="row"/>
        from
        sys_role
        where
        role = #{role}
    </select>
</mapper>